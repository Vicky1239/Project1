<h1>Cities</h1>
<h2>Total number of cities <%= @cities.count%></h2>
<table>
	<tr>
		<th>S.No</th>
		<th>Name</th>
		<th>Employees</th>
	</tr>
	<% @cities.each_with_index do |c,index| %>
		<% count =0 %>
		<% @e.each do |p| %>
			<% if c.id==p.city_id %>
				<%count+=1%>
			<%end%>
		<%end%>
		<tr>
			<td><%=index+1%></td>
			<td><%=link_to c.name, city_path(c)%></td>
			<td><%=count%></td>
		</tr>
	<%end%>
</table>
<br>
<center><%= will_paginate @cities %></center>	