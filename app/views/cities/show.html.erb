<h1>City Name : <%=@c.name%></h1>
<h2>Total Employees: <%=@c.employees.count%></h2>
<table style="width:100%" border="1px solid darkblue">
	<tr>
		<th>S.No   </th>
		<th>Name   </th>
		<th>Manager's Name   </th>
		<th>Manager's City   </th>
	</tr>

<% @c.employees.each_with_index do |emp,index|%>
	<tr>
		<td><%=index+1%></td>
		<td><%=emp.name%></td>
		<% if emp.manager_id.nil? %>
            <td><%= emp.name %></td>
            <td><%=emp.city.name %></td>
        <% else %>
            <td><%=emp.manager.name%></td>
			<td><%=emp.manager.city.name%></td>
        <% end %>
	</tr>
<%end%>
</table>	