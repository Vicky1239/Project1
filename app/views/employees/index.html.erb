<h1>Employees list</h1>
<table border="1px solid darkblue">
    <tr>
        <th>S.No....</th>
        <th>Name....</th>
        <th>Profile image</th>
        <th>City....</th>
        <th>Manager</th>
        <th>Employee Id....</th>
        <th>Manager Id....</th>
        <th>Manager/Employee....</th>
    </tr>
    <% @emp.each_with_index do |x,index| %>
    <% @city.each do |p| %>
        <% if p.id == x.city_id %>
            <tr>
                <td><%=index+1%></td>
                <td><%=link_to x.name, edit_employee_path(x)%></td>
                <% if x.image.exists? %>
                    <td><%= link_to (image_tag x.image.url, :style => "width :200px;height :100px;") ,employee_path(x) %></td>
                <% else %>
                    <td><%= link_to (image_tag "/assets/3" , :style => "width :200px;height :100px;") ,employee_path(x) %></td>
                <% end %>
                <td><%=p.name%></td>
                <% @man.each do |m| %>
                    <% if m.id==x.manager_id %>
                        <td><%=m.name%></td>
                    <% end %>
                <% end %>
                <td><%=x.id%></td>
                <td><%=x.manager_id%></td>
                <% if x.id==x.manager_id %>
                    <td><%="Manager"%></td>
                <% else %>
                    <td><%="Employee"%></td>
                <% end %>
            </tr>
        <%end%>
    <%end%>
    <%end%>
</table>
