<h1>Employees list</h1>
<table border="1px solid darkblue">
    <tr>
        <th>S.No....</th>
        <th>Name....</th>
        <th>Profile image</th>
        <th>City....</th>
        <th>Employee Id....</th>
        <th>Manager</th>
        <th>Manager Id....</th>
    </tr>
    <% @emp.each_with_index do |x,index| %>
        <tr>
            <td><%=index+1%></td>
            <td><%=link_to x.name, edit_employee_path(x)%></td>
            <% if x.image.exists? %>
                <td><%= link_to (image_tag x.image.url, :style => "width :200px;height :100px;") ,employee_path(x) %></td>
            <% else %>
                <td><%= link_to (image_tag "/assets/3" , :style => "width :200px;height :100px;") ,employee_path(x) %></td>
            <% end %>
            <td><%=x.city.name%></td>
            <td><%=x.id%></td>
            <% if x.manager_id.nil? %>
                <td><%= x.name %></td>
                <td>null</td>
            <% else %>
                <td><%=x.manager.name%></td>
                <td><%=x.manager_id%></td>
            <% end %>
        </tr>
    <%end%>
</table>
